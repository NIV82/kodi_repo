<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
  <category label="НАСТРОЙКИ">
    <setting id="animeportal_unblock" type="enum" label="Разблокировка:" default="0" values="Отключено|Antizapret - Proxy" />
    <setting type="sep" />
    <setting id="animeportal_engine" type="enum" label="Плеер" default="2" values="TAM|Elementum|T2Http"/>
    <setting id="animeportal_tam" type="enum" label="Предпочитаемый TAM-движок"  visible="eq(-1,0)" default="2" values="default|ACE engine|T2Http|YATP|Torrenter|Elementum|XBMCtorrent|ACE proxy|Quasar|TorrServer"/>
    <setting type="sep" />
    <setting label="[B]Установить T2HTTP[/B]" type="action" action="InstallAddon(script.module.torrent2http)" />
    <setting id="animeportal_proxy" label="proxy" type="text" default="" visible="false" />
    <setting id="animeportal_proxy_time" label="proxy_time" type="text" default="" visible="false" />
  </category>

  <category label="ANILIBRIA">
      <setting label="[B]Anilibria[/B]" id="use_anilibria" type="bool" default="true" />
      <setting id="anilibria_username" label="Логин:" type="text" default="" subsetting="true" visible="eq(-1,true)" />
      <setting id="anilibria_password" label="Пароль:" type="text" default="" option="hidden" subsetting="true" visible="eq(-2,true)" />
      <setting id="anilibria_mirror" label="Зеркало:" type="text" default="" subsetting="true" visible="eq(-3,true)" />
      <setting type="sep" visible="eq(-4,true)" />
      <setting id="anilibria_covers" type="enum" label="Обложки:" default="0" values="Не Сохранять|Сохранять" visible="eq(-5,true)" />
      <setting id="anilibria_titles" type="enum" label="Формат названий:" default="0" values="Ru|En|Ru-En" visible="eq(-6,true)" />
      <setting type="sep" visible="eq(-7,true)" />
      <setting id="anilibria_unblock" type="bool" label="Разблокировка:" default="false" visible="eq(-8,true)" />
      <setting id="anilibria_session" label="session" type="text" default="" visible="false" />
      <setting id="anilibria_search" label="status" type="text" default="" visible="false" />
      <setting id="anilibria_auth" label="auth" type="bool" default="false" visible="false" />
      <setting id="anilibria_year" label="year" type="text" default="" visible="false" />
      <setting id="anilibria_genre" label="genre" type="text" default="" visible="false" />
      <setting id="anilibria_season" label="season" type="text" default="" visible="false" />
      <setting id="anilibria_sort" label="sort" type="text" default="" visible="false" />
      <setting id="anilibria_status" label="status" type="text" default="" visible="false" />
  </category>

</settings>